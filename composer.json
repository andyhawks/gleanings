{
    "name": "traviscarden/gleanings",
    "description": "A BLT-based Drupal 8 site containing gleanings from project work, for reuse or future contribution.",
    "type": "project",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "acquia/blt": "^8.3",
        "acquia/lightning": "^3.0.0",
        "drupal/coffee": "^1.0",
        "geerlingguy/drupal-vm": "~4.3"
    },
    "require-dev": {
        "traviscarden/behat-table-comparison": "^0.2.1"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "enable-patching": true,
        "patches": {
            "drupal/lightning_layout": {
                "PHP Fatal error: Trait 'AwaitTrait' not found": "https://www.drupal.org/files/issues/2947126-lightning_layout-AwareTrait.patch"
            },
            "drupal/lightning_media": {
                "PHP Fatal error: Trait 'AwaitTrait' not found": "https://www.drupal.org/files/issues/2948062-lightning_media-AwareTrait.patch"
            }
        },
        "installer-types": [
            "bower-asset",
            "npm-asset"
        ],
        "installer-paths": {
            "docroot/core": [
                "type:drupal-core"
            ],
            "docroot/modules/contrib/{$name}": [
                "type:drupal-module"
            ],
            "docroot/modules/custom/{$name}": [
                "type:drupal-custom-module"
            ],
            "docroot/profiles/contrib/{$name}": [
                "type:drupal-profile"
            ],
            "docroot/profiles/custom/{$name}": [
                "type:drupal-custom-profile"
            ],
            "docroot/themes/contrib/{$name}": [
                "type:drupal-theme"
            ],
            "docroot/themes/custom/{$name}": [
                "type:drupal-custom-theme"
            ],
            "docroot/libraries/{$name}": [
                "type:drupal-library",
                "type:bower-asset",
                "type:npm-asset"
            ],
            "drush/contrib/{$name}": [
                "type:drupal-drush"
            ]
        },
        "merge-plugin": {
            "require": [
                "vendor/acquia/blt/composer.required.json",
                "vendor/acquia/blt/composer.suggested.json"
            ],
            "merge-extra": true,
            "merge-extra-deep": true,
            "merge-scripts": true,
            "replace": false,
            "ignore-duplicates": true
        }
    }
}
